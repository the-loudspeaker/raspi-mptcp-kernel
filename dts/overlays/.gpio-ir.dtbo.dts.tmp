# 1 "arch/arm/boot/dts/overlays/gpio-ir-overlay.dts"
# 1 "<built-in>"
# 1 "<command-line>"
# 1 "arch/arm/boot/dts/overlays/gpio-ir-overlay.dts"

/dts-v1/;
/plugin/;

/ {
        compatible = "brcm,bcm2835";

        fragment@0 {
                target-path = "/";
                __overlay__ {
                        gpio_ir: ir-receiver@12 {
                                compatible = "gpio-ir-receiver";
                                pinctrl-names = "default";
                                pinctrl-0 = <&gpio_ir_pins>;


                                gpios = <&gpio 18 1>;


                                linux,rc-map-name = "rc-rc6-mce";

                                status = "okay";
                        };
                };
        };

        fragment@1 {
                target = <&gpio>;
                __overlay__ {
                        gpio_ir_pins: gpio_ir_pins@12 {
                                brcm,pins = <18>;
                                brcm,function = <0>;
                                brcm,pull = <2>;
                        };
                };
        };

        __overrides__ {

                gpio_pin = <&gpio_ir>,"gpios:4",
                                <&gpio_ir>,"reg:0",
                                <&gpio_ir_pins>,"brcm,pins:0",
                                <&gpio_ir_pins>,"reg:0";
                gpio_pull = <&gpio_ir_pins>,"brcm,pull:0";
                invert = <&gpio_ir>,"gpios:8";

                rc-map-name = <&gpio_ir>,"linux,rc-map-name";
        };
};
